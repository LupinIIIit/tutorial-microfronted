# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation for most files
[*]
indent_style = space
indent_size = 4

# 2 space indentation for web files
[*.{html,css,scss,js,ts,json,yml,yaml}]
indent_size = 2

# Markdown specific settings
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80
insert_final_newline = true

# Code blocks in markdown - preserve formatting
[*.{md,mdx}]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 2

# YAML files  
[*.{yml,yaml}]
indent_size = 2

# Package files
[{package.json,.travis.yml}]
indent_size = 2

# Makefiles always use tabs
[Makefile]
indent_style = tab

# Batch files use CRLF
[*.{bat,cmd}]
end_of_line = crlf