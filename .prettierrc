{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "proseWrap": "preserve",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "printWidth": 80,
                "proseWrap": "preserve",
                "tabWidth": 2,
                "useTabs": false,
                "embeddedLanguageFormatting": "off"
            }
        },
        {
            "files": "*.{js,ts}",
            "options": {
                "printWidth": 100,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "es5"
            }
        },
        {
            "files": "*.json",
            "options": {
                "printWidth": 80,
                "tabWidth": 2
            }
        }
    ]
}